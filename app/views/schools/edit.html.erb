<% provide(:title, "Edit school") %>
<h1>Update the school's information</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@school) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :full_name %>
			<%= f.text_field :full_name, class: 'form_control' %>

			<%= f.label :short_name %>
			<%= f.text_field :short_name, class: 'form_control' %>

			<%= f.label :initials %>
			<%= f.text_field :initials, class: 'form_control' %>

			<%= f.label :mascot %>
			<%= f.text_field :mascot, class: 'form_control' %>

			<%= f.label :street %>
			<%= f.text_field :street, class: 'form_control' %>

			<%= f.label :city %>
			<%= f.text_field :city, class: 'form_control' %>

			<%= f.label :region %>
			<%= f.text_field :region, class: 'form_control' %>

			<%= f.label :postal_code %>
			<%= f.text_field :postal_code, class: 'form_control' %>

			<%= f.submit "Save Changes", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>